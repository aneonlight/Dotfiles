! .Xdefaults: global X settings
!
! see also urxvt(1)


! xft settings
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintsyle: hintslight


! general 
URxvt.depth: 24         ! set to 24 to prevent lag in i3
URxvt.geometry: 65x20   ! default terminal size upon creation
URxvt.fading: 0         ! disable terminal fading when not in focus
URxvt.iconFile: /usr/share/icons/Papirus/64x64/apps/Terminal.svg ! set icon for urxvt

URxvt*transparent: false    ! disable false transparency
URxvt*scrollBar: false  
URxvt*saveLines: 1000       ! save only 1k lines of scrollback

! for source code pro
!URxvt.font: xft:Source Code Pro:style=Regular:size=10,xft\
!	:Source Han Sans:style=Regular:size=9

! for office code pro
URxvt.font: xft:Office Code Pro:style=Regular:size=11, xft\
	:Source Han Sans:style=Regular:size=9
! prevent letters from having abnormal spacing
URxvt*letterSpace: -1


! misc 
URxvt*scrollTtyOutput: false    ! do not scroll with new output if looking at history
URxvt*scrollWithBuffer: true    ! scroll in relation to point in history
URxvt*scrollTtyKeypress: true   ! move scroll with keypress

! disable ctrl+shift iso mode 
URxvt.iso14755: false


! extensions
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/firefox-bin
URxvt.matcher.button: 1
URxvt.underlineURLs: true
